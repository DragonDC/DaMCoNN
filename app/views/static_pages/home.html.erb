<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Posty</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Witaj na DaMCoNN</h1>

    <h2>
      Załóż konto na najlepszym portalu społecznościowym! Nie trać czasu, zrób to już teraz!
    </h2>

    <%= link_to "Zarejestruj się już teraz!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>


<% end %>
